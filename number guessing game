import java.util.Random;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        final int MAX_ATTEMPTS = 5; // Maximum attempts per round
        final int TOTAL_ROUNDS = 3; // Number of rounds

        int totalScore = 0; // Total score across rounds

        System.out.println("Welcome to the Guess the Number Game!");
        System.out.println("You have " + MAX_ATTEMPTS + " attempts per round to guess the number.");

        for (int round = 1; round <= TOTAL_ROUNDS; round++) {
            System.out.println("\n--- Round " + round + " ---");
            int randomNumber = random.nextInt(100) + 1; // Random number between 1 and 100
            int attempts = 0;
            boolean guessedCorrectly = false;

            while (attempts < MAX_ATTEMPTS) {
                System.out.print("Enter your guess (1-100): ");
                int userGuess = scanner.nextInt();
                attempts++;

                if (userGuess == randomNumber) {
                    System.out.println("ğŸ‰ Correct! You guessed the number in " + attempts + " attempts.");
                    guessedCorrectly = true;
                    totalScore += (MAX_ATTEMPTS - attempts + 1) * 10; // More points for fewer attempts
                    break;
                } else if (userGuess > randomNumber) {
                    System.out.println("ğŸ“‰ Too high! Try again.");
                } else {
                    System.out.println("ğŸ“ˆ Too low! Try again.");
                }
            }

            if (!guessedCorrectly) {
                System.out.println("âŒ Out of attempts! The correct number was: " + randomNumber);
            }
        }

        System.out.println("\nGame Over! Your total score is: " + totalScore);
        scanner.close();
    }
}
